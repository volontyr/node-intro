{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Simple API",
    "description": "A simple API to learn how to write OpenAPI Specification"
  },
  "schemes": [
    "http"
  ],
  "host": "localhost:8080",
  "basePath": "/",
  "paths": {
    "/login": {
      "post": {
        "summary": "Authentication route",
        "description": "Authenticate user",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentication object with two parameters: auth and token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "auth": {
                      "type": "boolean"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get all users route",
        "description": "Users list",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Authentication object with two parameters: auth and token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "properties": {
                    "auth": {
                      "type": "boolean"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    }

  },
  "components": {
    "responses": {
      "Unauthorized": {
        "description": "Requester lacks valid  authentication credentials for the target resource",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "auth": {
                  "type": "boolean",
                  "default": false
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-auth-token"
      }
    }
  }
}