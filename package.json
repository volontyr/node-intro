{
  "name": "intro",
  "version": "0.0.0",
  "private": true,
  "main": "build/src/app.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node .",
    "test": "node --expose-gc ./node_modules/jest-cli/bin/jest.js \"(/src/.*(\\.|/)(test|spec))\\.(js|ts)$\" --runInBand --logHeapUsage --detectOpenHandles",
    "modtest": "node --expose-gc ./node_modules/jest-cli/bin/jest.js --testPathPattern=\".*\\.modtest\\.ts\" --runInBand --forceExit --detectOpenHandles --logHeapUsage"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.21",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "prettier": "1.17.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.0",
    "swagger-ui-express": "^4.1.2",
    "ts-jest": "^24.0.1",
    "tslint": "^5.20.1",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11",
    "typedi": "^0.8.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/(src)/.*(\\.|/)(test|modtest))\\.(js|ts)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "setupFiles": [
      "<rootDir>src/setup-tests.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/vendor/**"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
